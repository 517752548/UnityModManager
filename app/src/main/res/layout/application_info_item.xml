<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/choose_client_dialog_clients_item_name"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/choose_client_dialog_clients_item_icon"
        android:layout_toRightOf="@+id/choose_client_dialog_clients_item_icon"
        android:textSize="16sp"
        android:text="@android:string/unknownName" />

    <TextView
        android:id="@+id/choose_client_dialog_clients_item_package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_client_dialog_clients_item_name"
        android:layout_toEndOf="@+id/choose_client_dialog_clients_item_icon"
        android:layout_toRightOf="@+id/choose_client_dialog_clients_item_icon"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@android:string/unknownName" />

    <ImageView
        android:id="@+id/choose_client_dialog_clients_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/client_list_item_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>
